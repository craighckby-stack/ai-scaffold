{
  "version": "18.0.0",
  "cycles": {
    "default": 5,
    "maximum": 20,
    "minimum": 1
  },
  "ai": {
    "provider": "gemini",
    "model": "gemini-2.0-flash-exp",
    "temperature": 0.7,
    "maxTokens": 4096
  },
  "github": {
    "branchPrefix": "linear-evolution-",
    "defaultBranch": "main",
    "commitMessagePrefix": "Linear Evolution Cycle"
  },
  "filePatterns": {
    "include": [
      "\\.js$",
      "\\.jsx$",
      "\\.ts$",
      "\\.tsx$",
      "\\.py$",
      "\\.md$",
      "\\.css$",
      "\\.html$",
      "\\.json$"
    ],
    "exclude": [
      "node_modules/",
      "dist/",
      "build/",
      ".next/",
      "__MACOSX/"
    ],
    "maxFilesPerCycle": 10
  }
}
